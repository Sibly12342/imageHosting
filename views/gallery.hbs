<div class1="-5">

        <div class="container-fluid">
                <div class="row imageDiv"
                        style="display: flex !important; flex-wrap: wrap; justify-content: space-evenly;">
                        {{#if images}}
                        {{#each images}}
                        <div class="thumbNail" onclick='openModal("modalId", "{{this}}")'> <img src="/images/{{this}} "
                                        style="width: 10rem" class=""></div>
                        {{/each}}
                        {{else}}
                        <p style="display: flex !important;  justify-content: center;">
                                Nothing to Show</p>
                        {{/if}}
                </div>
        </div>
</div>

{{!-- image view modal starts here --}}
<!-- Button trigger modal -->
<button type="button" id="modalId" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" hidden>

</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
                <div class="modal-content">
                        <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Image</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                                <img src="" alt="" id="imgPreview" style="width: 100%;">
                        </div>
                </div>
        </div>
</div>
{{!-- image view modal starts end --}}


<style>
        .imageDiv div {
                width: fit-content;
                margin: 1rem 1.5rem;
                background-color: grey;
                padding: .2rem;
        }

        .imageDiv {
                padding: 1rem;
        }
</style>



<script>
        function openModal(modalId, attribute) {

                document.getElementById("imgPreview").src = '/images/' + attribute
                document.getElementById(modalId).click();
                // Do something with the attribute
                console.log(attribute);
        }
</script>

